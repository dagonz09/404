<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="/css/common.css" media="screen"/>
        <link rel="stylesheet" href="/css/listar_preguntas.css" media="screen"/>
    </head>
    <body>
        <%- include("header") %>
        <main>
            <form action="" method="get">
                <input type="submit" value="Busqueda" class="button"> 
                <input type="search" name="busqueda" placeholder="Buscar por titulo/cuerpo de pregunta" id="busqueda">
            </form>
            
            <h1>Todas las preguntas</h1>
            <div class="primeraLinea">
                <h2><%= questions.length %> preguntas</h2>
                <button class="button">Formular pregunta</button>
            </div>
            <ul>
                <% questions.forEach(function(question) { %>
                <li>
                    <div class="izq"> 
                        <h3><%= question.titulo %></h3>
                        <p><%= question.cuerpo %></p>
                        <div class="etiquetas">
                            <p class= "etiqueta">css</p>
                            <p class= "etiqueta">css3</p>
                        </div>
                    </div>
                    <div class="drcha">
                        <p>Formulada  el dia <%= question.fecha_pregunta %></p>
                        <img src=/img/<%= question.imagen %> alt=""  class="foto_pequeÃ±a">
                        <h3><%= question.nombre %></h3>
                    </div>
                </li>
                <% }); %>
            </ul>
        </main>
    </body>
</html>